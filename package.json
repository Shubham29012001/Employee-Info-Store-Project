{
	"name": "employee-info-store-project",
	"version": "1.0.0",
	"description": "A short mini project related to Employee Management System in MERN stack",
	"main": "server.js",
	"scripts": {
		"start": "node server.js",
		"server": "nodemon server.js",
		"client": "npm run start --prefix client",
		"dev": "concurrently \"npm run server\" \"npm run client\"",
		"build": "NPM_CONFIG_PRODUCTION=false && npm install && cd client && npm install --force client && npm run build"
	},
	"keywords": [
		"Employee-Management-System",
		"EMS",
		"Employee-CMS"
	],
	"author": "Shubham Maurya",
	"license": "ISC",
	"devDependencies": {
		"nodemon": "^2.0.19"
	},
	"dependencies": {
		"bcrypt": "^5.0.1",
		"compression": "^1.7.4",
		"cors": "^2.8.5",
		"dotenv": "^16.0.2",
		"express": "^4.18.1",
		"express-async-errors": "^3.1.1",
		"express-rate-limit": "^6.6.0",
		"helmet": "^6.0.0",
		"jsonwebtoken": "^8.5.1",
		"lodash": "^4.17.21",
		"mongoose": "^6.5.4",
		"xss-clean": "^0.1.1"
	}
}
